{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node12/tsconfig.json",
  "include": ["src/**.*"],
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}